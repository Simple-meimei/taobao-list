<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_text"
    >
    <!--上面调整店名颜色-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_item_allorder_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/main_white_text"
            >
            <!--上面调整“待支付”背景颜色-->

            <TextView
                android:id="@+id/tv_item_allorder_orderid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_10dp"
                android:background="@color/main_white_text"
                android:text="订单编号：1111111111111"
                />
            <!--上面调整订单编号颜色-->
            <TextView
                android:id="@+id/tv_item_allorder_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10dp"
                android:textColor="@color/main_red_text"
                android:text="待支付"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_allorder_shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1dp"
            android:drawableStart="@mipmap/shopname"
            android:drawableLeft="@mipmap/shopname"
            android:drawablePadding="@dimen/padding_5dp"
            android:text="芭芭拉服装店"
            android:textAllCaps="false"
            android:textColor="@color/default_text_color"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>